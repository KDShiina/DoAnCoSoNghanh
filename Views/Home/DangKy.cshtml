@model DoAnCoSoNghanh.Models.KhachHang

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký khách hàng</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/img/ok.png" rel="icon" type="image/x-icon">
</head>
<body>
    @using (Html.BeginForm())
    {


        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                        <div class="text-bg-dark">
                                            @Html.ActionLink("Đăng ký Nhà tuyển dụng", "DangKyNTD", "TuyenDung")
                                        </div>
                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng ký khách hàng</p>


                                        <form class="mx-1 mx-md-4" method="post" action="DangKy">
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Họ tên</label>
                                                    <input type="text" id="HoTen" name="HoTen" required class="form-control" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Tài khoản</label>
                                                    <input type="text" id="TaiKhoan" name="TaiKhoan" required class="form-control" />

                                                </div>
                                            </div>

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example3c">Mật khẩu</label>
                                                    <input type="password" id="MatKhau" name="MatKhau" required class="form-control" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Email</label>
                                                    <input type="email" id="Email" name="Email" required class="form-control" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Địa chỉ</label>
                                                    <input type="text" id="DiaChi" name="DiaChi" required class="form-control" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Điện thoại</label>
                                                    <input type="text" id="DienThoai" name="DienThoai" required  pattern="^[0-9]{1,10}$"  class="form-control" />

                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Ngày sinh</label>
                                                    <input type="date" id="NgaySinh" name="NgaySinh" max="@DateTime.Now.ToString("yyyy-MM-dd")" required class="form-control" />


                                                </div>
                                            </div>

                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Đăng ký
                                            </button>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="text-bg-dark">
                                                @Html.ActionLink("Đã có tài khoản? Đăng nhập", "DangNhap", "Home")
                                            </div>
                                        </form>

                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                             class="img-fluid" alt="Sample image">

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>


    }
<script>
        document.addEventListener('DOMContentLoaded', function () {
            // Lấy phần tử form
            var form = document.querySelector('form');

            // Thêm một sự kiện nghe khi form được submit
            form.addEventListener('submit', function (event) {
                // Lấy phần tử input mật khẩu
                var passwordInput = document.getElementById('MatKhau');

                // Kiểm tra xem mật khẩu có đáp ứng yêu cầu không
                if (!isPasswordValid(passwordInput.value)) {
                    // Ngăn chặn việc submit form nếu mật khẩu không hợp lệ
                    event.preventDefault();

                    // Hiển thị thông báo lỗi (bạn có thể tùy chỉnh phần này)
                    alert('Mật khẩu phải có ít nhất 6 ký tự, bao gồm ít nhất một ký tự hoa, một ký tự thường và một ký tự đặc biệt.');
                }
            });

            // Hàm kiểm tra xem mật khẩu có đáp ứng yêu cầu không
            function isPasswordValid(password) {
                // Độ dài tối thiểu 6 ký tự
                if (password.length < 6) {
                    return false;
                }

                // Ít nhất một chữ cái viết hoa
                if (!/[A-Z]/.test(password)) {
                    return false;
                }

                // Ít nhất một chữ cái viết thường
                if (!/[a-z]/.test(password)) {
                    return false;
                }

               // Ít nhất một ký tự đặc biệt
                if (!/[!@@#$%^&*(),.?":{}|<>]/.test(password)) {
                    return false;
                }


                // Nếu tất cả các kiểm tra đều đúng, mật khẩu hợp lệ
                return true;
            }
        });
</script>

</body>
</html>
