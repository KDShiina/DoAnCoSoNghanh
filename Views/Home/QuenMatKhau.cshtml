


@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">@ViewBag.Message</div>
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quên mật khẩu</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/img/ok.png" rel="icon" type="image/x-icon">
</head>
<body>
    @using (Html.BeginForm("QuenMatKhau", "Home", FormMethod.Post, new { role = "form" }))
    {

        @Html.AntiForgeryToken()
        <section class="vh-100" style="background-color: #eee;">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-lg-12 col-xl-11">
                        <div class="card text-black" style="border-radius: 25px;">
                            <div class="card-body p-md-5">
                                <div class="row justify-content-center">
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Quên Mật Khẩu</p>


                                        <form class="mx-1 mx-md-4" method="post" action="QuenMatKhau">

                                            <div class="d-flex flex-row align-items-center mb-4">
                                                <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example1c">Email</label>
                                                    <input type="email" id="Email" name="Email" placeholder="Nhập email của bạn" required class="form-control" />

                                                </div>
                                            </div>


                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Lấy lại mật khẩu
                                            </button>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="text-bg-dark">
                                                @Html.ActionLink(" Đăng nhập", "DangNhap", "Home")
                                            </div>

                                        </form>

                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                             class="img-fluid" alt="Sample image">

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>


    }


</body>
</html>
