    ViewBag.Title = "ThongTinCaNhan";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<br />
<hr />
<h2>Thông tin cá nhân</h2>
<hr />
<br />

<div class="table-responsive">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td class="text-right"><b>Họ và Tên</b></td>
                <td>@Html.DisplayFor(model => model.HoTen)</td>
            </tr>
            <tr>
                <td class="text-right"><b>Tài khoản</b></td>
                <td>@Html.DisplayFor(model => model.TaiKhoan)</td>
            </tr>
            <tr>
                <td class="text-right"><b>Mật Khẩu</b></td>
                <td>@Html.DisplayFor(model => model.MatKhau)</td>
            </tr>
            <tr>
