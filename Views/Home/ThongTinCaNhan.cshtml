            </tr>
            <tr>
                <td class="text-right"><b>Địa chỉ</b></td>
                <td>@Html.DisplayFor(model => model.DiaChi)</td>
            </tr>
            <tr>
                <td class="text-right"><b>Điện thoại</b></td>
                <td>@Html.DisplayFor(model => model.DienThoai)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="text-right">
    @Html.ActionLink("Chỉnh sửa", "ChinhSuaThongTin", "Home", new { @class = "btn btn-primary" }) |
