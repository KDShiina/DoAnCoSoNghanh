
@{
    ViewBag.Title = "CapNhatThongTin";
    Layout = "~/Views/Shared/_LayoutPageNhaTuyenDung.cshtml";
}



@model DoAnCoSoNghanh.Models.NhaTuyenDung


<h2>Cập Nhật Thông Tin Nhà Tuyển Dụng</h2>

@using (Html.BeginForm("CapNhatThongTin", "TuyenDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.TenCongTy, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.TenCongTy, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
        @Html.ValidationMessageFor(model => model.TenCongTy, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MoTaCongTy, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.MoTaCongTy, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
        @Html.ValidationMessageFor(model => model.MoTaCongTy, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary" />
    </div>
}
